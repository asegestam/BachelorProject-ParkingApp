<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.smspark.views.MapFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/navbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/mapbox_blue">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/trip_btn"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/mapbox_blue"
                android:textAppearance="@style/NotificationText"
                android:textColor="@color/colorPrimaryDark"
                mapbox:icon="@drawable/ic_directions"
                mapbox:iconGravity="textStart"
                mapbox:iconTint="@color/mapbox_plugins_white"
                mapbox:layout_constraintBottom_toBottomOf="parent"
                mapbox:layout_constraintEnd_toStartOf="@+id/profile_btn"
                mapbox:layout_constraintHorizontal_bias="0.5"
                mapbox:layout_constraintHorizontal_weight=".50"
                mapbox:layout_constraintStart_toStartOf="parent"
                mapbox:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/profile_btn"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/mapbox_blue"
                android:textAppearance="@style/NotificationText"
                android:textColor="@color/colorPrimaryDark"
                mapbox:icon="@drawable/ic_person"
                mapbox:iconGravity="textStart"
                mapbox:iconTint="@color/mapbox_plugins_white"
                mapbox:layout_constraintBottom_toBottomOf="parent"
                mapbox:layout_constraintEnd_toStartOf="@+id/tickets_btn"
                mapbox:layout_constraintHorizontal_bias="0.5"
                mapbox:layout_constraintStart_toEndOf="@+id/trip_btn"
                mapbox:layout_constraintTop_toTopOf="parent"
                mapbox:layout_constraintVertical_bias="0.0" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tickets_btn"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/mapbox_blue"
                android:textAppearance="@style/NotificationText"
                android:textColor="@color/colorPrimaryDark"
                mapbox:icon="@drawable/ic_receipt"
                mapbox:iconGravity="textStart"
                mapbox:iconTint="@color/mapbox_plugins_white"
                mapbox:layout_constraintBottom_toBottomOf="parent"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintHorizontal_bias="0.5"
                mapbox:layout_constraintStart_toEndOf="@+id/profile_btn"
                mapbox:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            mapbox:mapbox_cameraTargetLat="40.73581"
            mapbox:mapbox_cameraTargetLng="-73.99155"
            mapbox:mapbox_cameraZoom="11"
            android:layout_below="@id/navbar">

        </com.mapbox.mapboxsdk.maps.MapView>



    </RelativeLayout>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/startNavigationButton"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/mapbox_blue"
        android:textColor="@color/colorPrimaryDark"
        android:elevation="5dp"
        android:text="@string/startNavigation"
        android:textAppearance="@style/NotificationText"
        android:visibility="gone"
        mapbox:cornerRadius="10dp"
        mapbox:layout_anchor="@+id/mapView"
        mapbox:layout_anchorGravity="bottom|center"
        mapbox:layout_constraintBottom_toBottomOf="parent"
        mapbox:layout_constraintEnd_toEndOf="parent"
        mapbox:layout_constraintStart_toStartOf="parent" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:elevation="8dp"
        android:src="@drawable/ic_search_black_24dp"
        mapbox:backgroundTint="@color/mapbox_blue"
        mapbox:rippleColor="@color/colorPrimaryDark" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>