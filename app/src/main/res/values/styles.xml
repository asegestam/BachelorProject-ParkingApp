<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomSheet">
        <item name="shapeAppearance">?attr/shapeAppearanceLargeComponent</item>
        <item name="backgroundTint">@color/colorPrimaryLight</item>
        <item name="android:elevation">16dp</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_skipCollapsed">false</item>
        <item name="behavior_peekHeight">200dp</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@color/colorAccentLight</item>
        <!--dialog background-->
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#f00</item>
        <item name="android:backgroundTint">@color/colorPrimaryLight</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccentLight</item>
        <item name="android:backgroundTint">@color/colorPrimaryLight</item>
    </style>

    <style name="CustomSwitchTheme" >
        <item name="colorControlNormal">#B6B3B3</item>
        <item name="colorControlActivated">@color/colorAccentLight</item>
    </style>

    <style name="MenuButtonsSmall">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">@color/colorPrimary</item>
        <item name="fab_colorPressed">@color/colorPrimaryDark</item>
        <item name="fab_colorRipple">@color/colorPrimaryLight</item>
    </style>

    <style name="MenuButtonInactive">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">@color/colorAccentGrey</item>
        <item name="fab_colorPressed">@color/colorPrimaryDark</item>
        <item name="fab_colorRipple">@color/colorPrimaryLight</item>
        <item name="android:src">@drawable/accessible_icon</item>
    </style>

    <style name="CustomNavigationLight" parent="@style/NavigationViewLight">
        <item name="navigationViewListBackground">@color/colorPrimaryDark</item>
        <item name="navigationViewBannerBackground">@color/colorPrimary</item>
        <item name="navigationViewBannerManeuverPrimary">@color/colorPrimaryLight</item>
        <item name="navigationViewBannerPrimaryText">@color/colorPrimaryLight</item>
        <item name="navigationViewBannerSecondaryText">@color/colorPrimaryLight</item>
        <item name="navigationViewPrimaryText">@color/black</item>
        <item name="navigationViewSecondaryText">@color/black</item>
        <item name="navigationViewAccent">@color/colorPrimaryDark</item>
        <item name="navigationViewSecondary">@color/black</item>
        <item name="navigationViewProgressBackground">@color/colorPrimaryDark</item>
        <item name="navigationViewProgress">@color/colorAccentGrey</item>
        <item name="navigationViewMapStyle">@string/navigation_day</item>
    </style>
</resources>
